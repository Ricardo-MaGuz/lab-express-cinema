<section id="movie">
  <figure>
    <img src="{{image}}" alt="{{title}}">
  </figure>
  <div>
    <a href="/movies">Go Back</a>
    <h1>{{title}}</h1>
    <h2>Director: {{director}}</h2>
    <h3>Stars</h3>
    <ul>
      {{#each stars}}
            <li>{{ this }}</li>
        {{/each}}
    </ul>
    <p>{{description}}</p>
    <p>
      {{#each showtimes}}
        <time>{{this}}</time> |
      {{/each}}
    </p>
  </div>
</section>